<h1>お題一覧</h1>
<div>
  <button phx-click="toggle_new_theme">お題作成</button>
</div>
<table>
  <tbody>
    <tr>
      <th>お題</th>
      <th>説明</th>
      <th>登録日</th>
      <th></th>
    </tr>
    <%= for theme <- @editor.themes do %>
      <tr>
        <td><%= theme.theme %></td>
        <td><%= theme.description %></td>
        <td><%= format_date(theme.inserted_at) %></td>
        <td>
          <button phx-click="toggle_show_theme" phx-value-id={theme.id}>詳細</button>
          <button phx-click="toggle_edit_theme" phx-value-id={theme.id}>編集</button>
          <button phx-click="toggle_delete_theme" phx-value-id={theme.id}>削除</button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>